<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>

        <item name="material_drawer_selected">#01ffffff</item>
        <item name="material_drawer_selected_text">@color/primary</item>

        <item name="android:textColorPrimary">@color/text_color_default</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>

        <item name="android:editTextStyle">@style/MyEditTextStyle</item>

    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/edit_text_selector</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@drawable/edit_text_selector</item>
    </style>

    <style name="typo_headline">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="typo_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="typo_subhead">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="typo_body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="typo_body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="raised_button" parent="android:style/Widget.Material.Button">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="raised_button_light" parent="raised_button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="flat_button">
        <item name="android:padding">24dp</item>
        <item name="fb_defaultColor">@color/transparent</item>
        <item name="fb_focusColor">@color/primary_light</item>
        <item name="fb_iconPosition">left</item>
        <item name="fb_textColor">@color/primary</item>
        <item name="fb_textSize">7sp</item>
    </style>

    <style name="patient_info_row_spacing">
        <item name="android:layout_marginTop">@dimen/paper_card_padding</item>
        <item name="android:layout_marginLeft">@dimen/paper_card_padding</item>
        <item name="android:layout_marginRight">@dimen/paper_card_padding</item>
    </style>

    <style name="patient_info_row_spacing_sml">
        <item name="android:layout_marginTop">@dimen/paper_card_padding</item>
        <item name="android:layout_marginLeft">@dimen/paper_card_padding</item>
        <item name="android:layout_marginRight">@dimen/paper_card_padding</item>
    </style>

    <style name="patient_info_value_edit_text" parent="typo_body1">
        <item name="android:layout_marginLeft">@dimen/patient_info_title_and_value_spacing</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
