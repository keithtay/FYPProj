<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.keith.fyp.views.activities.ViewScheduleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_content_container_padding"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/paper_card_padding">

                    <ImageView
                        android:id="@+id/photo_image_view"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/no_photo"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/paper_card_padding"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/typo_body1"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/first_name_text_view"
                                style="@style/typo_body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Patient First Name"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/patient_info_in_schedule_spacing"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/typo_body1"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/last_name_text_view"
                                style="@style/typo_body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Patient Last Name"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/patient_info_in_schedule_spacing"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/typo_body1"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/gender_text_view"
                                style="@style/typo_body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/patient_info_in_schedule_spacing"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/typo_body1"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/dob_text_view"
                                style="@style/typo_body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 January 1934"></TextView>
                        </LinearLayout>

                        <Button
                            android:id="@+id/view_more_button"
                            style="@style/raised_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/patient_info_in_schedule_spacing"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="View more patient information"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_content_container_padding"
                android:layout_marginRight="@dimen/activity_content_container_padding"
                android:layout_marginBottom="@dimen/activity_content_container_padding"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/activity_content_container_padding"
                    android:paddingBottom="@dimen/activity_content_container_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/typo_title"
                        android:text="Today's Schedule"/>
                    <TextView
                        android:id="@+id/today_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/typo_subhead"
                        android:textColor="@color/primary"
                        android:text="25 August 2015"></TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginTop="@dimen/activity_content_container_padding"
                        android:layout_marginBottom="@dimen/activity_content_container_padding">
                    </View>
                    <LinearLayout
                        android:id="@+id/event_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_content_container_padding"
                        android:paddingRight="@dimen/activity_content_container_padding">

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
