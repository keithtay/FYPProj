<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paper_card_padding" >

                <ImageView
                    android:id="@+id/menu_button"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:layout_marginRight="-10dp"
                    android:layout_marginTop="-25dp"
                    android:src="@drawable/ic_more_horiz"></ImageView>

                <LinearLayout
                    android:id="@+id/routinity_item_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/routinity_item_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:inputType="text"
                            android:nextFocusDown="@+id/routinity_item_notes_edit_text"/>
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="@dimen/paper_card_row_spacing"
                        android:layout_height="0dp"></View>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/routinity_item_notes_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Notes"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/routinity_item_second_row"
                    android:layout_below="@id/routinity_item_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paper_card_row_spacing"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/routinity_item_start_date_picker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Start Date"
                            android:inputType="date" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="@dimen/activity_content_container_padding"
                        android:layout_height="0dp"></View>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/routinity_item_end_date_picker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="End Date"
                            android:inputType="date" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/routinity_item_third_row"
                    android:layout_below="@id/routinity_item_second_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paper_card_row_spacing"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/routinity_item_start_time_picker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Start Time"
                            android:inputType="time" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="@dimen/activity_content_container_padding"
                        android:layout_height="0dp"></View>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/routinity_item_end_time_picker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="End Time"
                            android:inputType="time" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/routinity_item_fourth_row"
                    android:layout_below="@id/routinity_item_third_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/paper_card_row_spacing"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repeat Every"
                            style="@style/typo_body1"
                            android:textColor="@color/black_57"
                            android:textSize="18sp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/routinity_item_every_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"/>

                            <Spinner
                                android:id="@+id/routinity_item_every_spinner"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/paper_card_row_spacing"
                        android:layout_height="0dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>

            <com.andexert.expandablelayout.library.ExpandableLayout xmlns:expandable="http://schemas.android.com/apk/res-auto"
                android:id="@+id/edit_routinity_expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandable:el_contentLayout="@layout/expandable_edit_routinity_content"
                expandable:el_headerLayout="@layout/expandable_edit_routinity_header" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>