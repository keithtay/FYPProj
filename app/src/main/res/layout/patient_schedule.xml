<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/paper_card_padding"
            android:paddingBottom="@dimen/paper_card_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/typo_title"
                android:text="Today's Schedule"/>
            <TextView
                android:id="@+id/today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/typo_subhead"
                android:textColor="@color/primary"
                android:text="25 August 2015"></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="@dimen/paper_card_padding"
                android:layout_marginBottom="@dimen/paper_card_padding">
            </View>
            <LinearLayout
                android:id="@+id/event_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/paper_card_padding"
                android:paddingRight="@dimen/paper_card_padding">

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>