<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paper_card_padding">
    <TextView
        android:id="@+id/field_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field Category"
        style="@style/typo_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/sml_spacing"
        android:layout_marginBottom="@dimen/sml_spacing"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/field_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Field Name"
            style="@style/typo_body2"/>
        <TextView
            android:id="@+id/old_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Old Value"
            style="@style/typo_body1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <TextView
            android:id="@+id/new_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="New Value"
            style="@style/typo_body1"
            android:gravity="right"/>
    </LinearLayout>
</LinearLayout>