<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_patient_photo_image_view"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/avatar_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_patient_name_text_view"
            style="@style/typo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caregiver name"
        android:textColor="@color/light_green_800"/>

        <TextView
            android:id="@+id/notification_summary_text_view"
            style="@style/typo_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient has 5 updates" />
    </LinearLayout>

</LinearLayout>