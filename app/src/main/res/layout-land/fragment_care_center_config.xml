<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keith.fyp.views.fragments.CareCenterConfigFragment">

    <LinearLayout
        android:id="@+id/care_center_config_categ_fragment_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:id="@+id/list_shadow"
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/care_center_config_categ_fragment_container"
        android:background="@drawable/shadow_right" />

    <LinearLayout
        android:id="@+id/care_center_config_detail_fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_shadow"
        android:orientation="vertical" />

</RelativeLayout>
