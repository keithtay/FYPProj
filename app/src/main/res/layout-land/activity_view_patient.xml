<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_content_container"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context="com.example.keith.fyp.views.activities.CreatePatientActivity">

    <fragment
        android:id="@+id/patient_info_categ_list_fragment"
        android:name="com.example.keith.fyp.views.fragments.PatientInfoCategListFragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_patient_info_categ_list" />

    <View
        android:id="@+id/patient_info_categ_list_shadow"
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/patient_info_categ_list_fragment"
        android:background="@drawable/shadow_right" />

    <LinearLayout
        android:id="@+id/view_patient_info_form_fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/patient_info_categ_list_shadow"
        android:orientation="vertical" />

</RelativeLayout>
